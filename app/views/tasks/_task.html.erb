<tr>
  <th scope="row"><%= task_counter + 1 %></th>
  <td>
    <span class="<%= 'text-decoration-line-through text-muted' if task.completed? %>">
      <%= task.title %>
    </span>
  </td>
  <td><%= l task.created_at, format: :short %></td>
  <td>
    <div class="btn-group" role="group">
      <% if !task.completed? %>
        <%= button_to t('.complete'), complete_task_path(task), method: :patch, class: "btn btn-sm btn-outline-primary", form_class: "d-inline" %>
      <% end %>
      <%= link_to t('tasks.edit.title'), edit_task_path(task), class: "btn btn-sm btn-outline-secondary" %>
      <%= button_to t('tasks.destroy.title'), task_path(task), method: :delete, class: "btn btn-sm btn-outline-danger", form_class: "d-inline", data: { turbo_confirm: t('tasks.destroy.confirm') } %>
    </div>
  </td>
</tr>
